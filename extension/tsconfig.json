{
  "extends": ["plasmo/templates/tsconfig.base", "../tsconfig.json"],
  "exclude": [
    "node_modules"
  ],
  "include": [
    ".plasmo/index.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "../shared/**/*.ts"
  ],
  "compilerOptions": {
    "paths": {
      "~*": ["./src/*"],
      "shared/*": ["../shared/*"]
    },
    "baseUrl": ".",
    "module": "ES6",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false
  }
}
