{
  "name": "promptier-extension",
  "displayName": "Promptier",
  "version": "0.0.1",
  "description": "Reuse Great Prompts, Skip the Copy-Paste",
  "author": "Kory Kilpatrick",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@clerk/chrome-extension": "^2.2.10",
    "@types/uuid": "^10.0.0",
    "plasmo": "0.90.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "^6.22.1",
    "tailwindcss": "3.4.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "key": "$CRX_PUBLIC_KEY",
    "permissions": [
      "cookies",
      "storage",
      "sidePanel"
    ],
    "host_permissions": [
      "http://localhost/*",
      "$CLERK_FRONTEND_API/*"
    ],
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "action": {}
  }
}