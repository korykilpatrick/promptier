  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "..",
    "paths": {
      "shared/*": ["shared/*"]
    }
  },
  "include": [
    "src/config/**/*.ts",
    "src/routes/**/*.ts",
    "src/utils/**/*.ts",
