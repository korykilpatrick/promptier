{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "shared/*": ["shared/*"],
      "~/*": ["extension/src/*"]
    },
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "shared/**/*.ts",
    "shared/**/*.tsx",
    "extension/src/**/*.ts",
    "extension/src/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist", "server"]
} 